<Window x:Class="CprCheckWPFtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CprCheckWPFtest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="TxtBoxCPR" HorizontalAlignment="Left" Height="23" Margin="31,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnValidateCPR" Content="Validate CPR" HorizontalAlignment="Left" Margin="31,72,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.335,-0.015" Click="btnValidateCPR_Click"/>
        <Label x:Name="lblValidationResult" Content="Validation result" HorizontalAlignment="Left" Margin="166,36,0,0" VerticalAlignment="Top" Width="102"/>

    </Grid>
</Window>
