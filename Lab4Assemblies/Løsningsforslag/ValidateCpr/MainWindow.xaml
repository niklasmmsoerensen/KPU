<Window x:Class="ValidateCpr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CPR Check" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="CPR nummer" Height="28" HorizontalAlignment="Left" Margin="17,28,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="102,30,0,0" Name="tbxCprNo" VerticalAlignment="Top" Width="120" TextChanged="tbxCprNo_TextChanged" />
        <Button Content="Check"  HorizontalAlignment="Left" Margin="17,75,0,0" Name="btnCheck" VerticalAlignment="Top" MinWidth="75" Click="btnCheck_Click" IsDefault="True" />
        <TextBlock  HorizontalAlignment="Left" Margin="102,78,0,0" Name="tblErrMessage" Text=" " VerticalAlignment="Top" MinWidth="120" />
    </Grid>
</Window>
